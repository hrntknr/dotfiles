# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.go]
indent_style = tab
indent_size = 4

[*.rs]
indent_size = 4

[*.sol]
indent_size = 4

[*.py]
indent_size = 4

[*.txt]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
